<div class="w-full h-full grid place-items-center p-8">
  <div class="bg-gray-200 rounded-xl h-full w-full flex flex-col gap-4 p-4">
    <div class="flex justify-between">
      <div class="flex gap-2">
        <div class="h-16 w-16 rounded-full bg-gray-500">
          <img src="<%= @stock.logo_url %>" class="rounded-full" alt="">
        </div>
        <div>
          <h3 class="text-2xl font-bold text-gray-900"><%= @stock.symbol %></h3>
          <p class="text-lg text-gray-500 font-medium"><%= @stock.company_name %></p>
        </div>
      </div>
      <div class="text-right">
        <h3 class="text-2xl font-extrabold text-gray-900">$<%= @stock.price %></h3>
        <h5 class="text-lg font-semibold text-green-500">
          &uarr; <%= @stock.change_percent %> 
        </h5>
      </div>
    </div>
    <div class="w-full flex-1 bg-gray-400">
      <p>GRAPH HERE</p>
    </div>
    <div class="flex justify-between w-full">
      <div class="flex gap-10 px-4">
        <div>
          <p class="text-gray-400 font-medium text-lg">Open</p>
          <h5 class="text-2xl text-gray-900 font-bold">$<%= @stock.chart.last["open"] %></h5>
        </div>

        <div>
          <p class="text-gray-400 font-medium text-lg">Day Low</p>
          <h5 class="text-2xl text-gray-900 font-bold">$<%= @stock.chart.last["low"] %></h5>
        </div>

        <div>
          <p class="text-gray-400 font-medium text-lg">Day High</p>
          <h5 class="text-2xl text-gray-900 font-bold">$<%= @stock.chart.last["high"] %></h5>
        </div>
      </div>
      <%=
        link_to 'Buy',
                  new_transaction_path('buy', @stock.symbol),
                  class:
                    'text-2xl font-bold p-4 px-8 rounded-lg bg-gray-900 text-gray-50'
      %>
    </div>
  </div>
</div>
