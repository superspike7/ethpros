<div class="flex">
  <div class="flex items-center justify-between flex-col w-6/12 h-screen bg-slate-50 border-solid" >
    <div class="font-bold text-xl">Ethpros</div>
    <div class="flex flex-col items-center justify-center w-3/5">
    <%= form_for(resource, as: resource_name, html: {class: 'w-1/2'}, url: session_path(resource_name)) do |f| %>
      <div class="py-1 text-3xl">Welcome back</div>
      <div class="py-5 text-base">Welcome back! Please enter your details.</div>
      <div class="pb-5">
        <%= f.label :email, class: "pb-10" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full rounded-md h-9" %>
      </div>

      <div class="pb-4">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full rounded-md h-9" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="pb-5">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="pb-5 flex justify-center">
        <%= f.submit "Log in", class: "bg-gray-500 p-2.5 rounded-lg w-full" %>
      </div>
    <% end %>
    <div class="flex text-sm justify-between w-1/2"> 
      <a href="/users/sign_up" class="sup">Sign up</a>
      <a href="/users/password/new" class="for">Forgot your password?</a>
    </div>
    </div>
    <div class="italic">Avion 2022</div>
  </div>
  <div class="w-6/12 bg-slate-200 border-solid"></div>
</div>